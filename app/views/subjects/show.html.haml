.page-header
  %h1
    .label.label-default= @language.subject
    = @subject.name
%p
  %b= @language.teacher + ':'
  = @subject.teacher.full_name
%p
  %b= @language.class + ':'
  = @subject.school_class.name

= link_to @language.edit, edit_subject_path(@subject), :class => 'btn btn-default'
= link_to @language.back, subjects_path, :class => 'btn btn-default'
