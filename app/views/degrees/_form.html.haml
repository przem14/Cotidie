= form_for @degree do |f|
  - if @degree.errors.any?
    #error_explanation
      %h2= "#{pluralize(@degree.errors.count, "error")} prohibited this degree from being saved:"
      %ul
        - @degree.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :activity
    = f.text_field :activity
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
