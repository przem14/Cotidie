.page-header
  %h1
    .label.label-default= @language.degree
    = @degree.value

%p
  %b= @language.subject + ':'
  = @degree.subject.name
%p
  %b= @language.teacher + ':'
  = @degree.subject.teacher.full_name
%p
  %b= @language.activity + ':'
  = @degree.activity
%p
  %b= @language.description + ':'
  = @degree.description
%p
  %b= @language.created + ':'
  = @degree.created_at

= link_to @language.edit, edit_degree_path(@degree), :class => 'btn btn-default'
= link_to @language.back, degrees_path, :class => 'btn btn-default'
