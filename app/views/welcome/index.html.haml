- if user_signed_in?
  - if current_user.role == 'tutor' and current_user.student == nil
    %center
      %h4= @language.set_student
      %button.btn.btn-primary.set-student{:style => 'color: white;'}= @language.set

      .choose-student{:style => 'display: none;'}
.page-header
  %h1= @language.home_page

- if user_signed_in?
  - if current_user.is_approved != true and current_user.role != 'admin'
    %p= @language.not_approved
    %p= @language.wait_for_admin